{% comment %}
  Ce fichier est généré dynamiquement pour la PWA.
  Il utilise les paramètres du theme.liquid et settings_schema.json.
{% endcomment %}
{
  "name": "{{ shop.name | json }}",
  "short_name": "{{ settings.site_name_short | default: shop.name | json }}",
  "start_url": "/",
  "display": "standalone",
  "background_color": "{{ settings.bg_color | default: '#ffffff' }}",
  "theme_color": "{{ settings.theme_color | default: '#000000' }}",
  "icons": [
    {% if settings.favicon != blank %}
      {
        "src": "{{ settings.favicon | image_url: width: 192, height: 192 }}",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "{{ settings.favicon | image_url: width: 512, height: 512 }}",
        "sizes": "512x512",
        "type": "image/png"
      }
    {% else %}
      {
        "src": "https://cdn.shopify.com/s/files/1/0000/0001/t/1/assets/favicon.png",
        "sizes": "192x192",
        "type": "image/png"
      }
    {% endif %}
  ]
}

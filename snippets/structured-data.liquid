{% comment %}
  Snippet: Structured Data (JSON-LD)
  Description: Données structurées pour le SEO (Google, Bing, etc.)
  Conforme aux standards Schema.org
{% endcomment %}

{%- comment -%} Organization Schema - Affiché sur toutes les pages {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": {{ shop.name | json }},
  "url": {{ request.origin | append: routes.root_url | json }},
  {%- if settings.social_facebook_link != blank or settings.social_instagram_link != blank or settings.social_x_link != blank -%}
    "sameAs": [
      {%- if settings.social_facebook_link != blank -%}{{ settings.social_facebook_link | json }}{%- endif -%}
      {%- if settings.social_instagram_link != blank -%}{%- if settings.social_facebook_link != blank -%},{%- endif -%}{{ settings.social_instagram_link | json }}{%- endif -%}
      {%- if settings.social_x_link != blank -%}{%- if settings.social_facebook_link != blank or settings.social_instagram_link != blank -%},{%- endif -%}{{ settings.social_x_link | json }}{%- endif -%}
      {%- if settings.social_tiktok_link != blank -%}{%- if settings.social_facebook_link != blank or settings.social_instagram_link != blank or settings.social_x_link != blank -%},{%- endif -%}{{ settings.social_tiktok_link | json }}{%- endif -%}
      {%- if settings.social_youtube_link != blank -%}{%- if settings.social_facebook_link != blank or settings.social_instagram_link != blank or settings.social_x_link != blank or settings.social_tiktok_link != blank -%},{%- endif -%}{{ settings.social_youtube_link | json }}{%- endif -%}
    ],
  {%- endif -%}
  "logo": {
    "@type": "ImageObject",
    "url": {{ settings.logo | image_url: width: 500 | prepend: 'https:' | json }}
  }
}
</script>

{%- comment -%} WebSite Schema avec SearchAction - Page d'accueil uniquement {%- endcomment -%}
{%- if request.page_type == 'index' -%}
  {%- assign potential_action_target = request.origin | append: routes.search_url | append: '?q={search_term_string}' -%}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": {{ shop.name | json }},
    "url": {{ request.origin | append: routes.root_url | json }},
    "potentialAction": {
      "@type": "SearchAction",
      "target": {{ potential_action_target | json }},
      "query-input": "required name=search_term_string"
    }
  }
  </script>
{%- endif -%}

{%- comment -%} Product Schema - Pages produit uniquement {%- endcomment -%}
{%- if request.page_type == 'product' -%}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": {{ product.title | json }},
    "url": {{ request.origin | append: product.url | json }},
    {%- if product.featured_media -%}
      "image": [
        {{ product.featured_media | image_url: width: 1920 | prepend: 'https:' | json }}
        {%- for media in product.media offset: 1 limit: 4 -%}
          ,{{ media | image_url: width: 1920 | prepend: 'https:' | json }}
        {%- endfor -%}
      ],
    {%- endif -%}
    "description": {{ product.description | strip_html | truncate: 300 | json }},
    {%- if product.vendor != blank -%}
      "brand": {
        "@type": "Brand",
        "name": {{ product.vendor | json }}
      },
    {%- endif -%}
    {%- if product.variants.size > 0 -%}
      "offers": [
        {%- for variant in product.variants -%}
          {
            "@type": "Offer",
            {%- if variant.sku != blank -%}
              "sku": {{ variant.sku | json }},
            {%- endif -%}
            "availability": "https://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}",
            "price": {{ variant.price | divided_by: 100.00 | json }},
            "priceCurrency": {{ cart.currency.iso_code | json }},
            "url": {{ request.origin | append: variant.url | json }}
          }{%- unless forloop.last -%},{%- endunless -%}
        {%- endfor -%}
      ],
    {%- endif -%}
    {%- if product.metafields.reviews.rating.value != blank -%}
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": {{ product.metafields.reviews.rating.value | json }},
        "reviewCount": {{ product.metafields.reviews.count.value | json }}
      },
    {%- endif -%}
    {%- if product.variants.first.grams > 0 -%}
      "weight": {
        "@type": "QuantitativeValue",
        "value": {{ product.variants.first.grams | json }},
        "unitCode": "GRM"
      }
    {%- endif -%}
  }
  </script>
{%- endif -%}

{%- comment -%} BreadcrumbList Schema - Toutes les pages sauf accueil {%- endcomment -%}
{%- unless request.page_type == 'index' -%}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": {{ 'general.breadcrumbs.home' | t | json }},
        "item": {{ request.origin | append: routes.root_url | json }}
      }
      {%- if request.page_type == 'collection' -%}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ collection.title | json }},
          "item": {{ request.origin | append: collection.url | json }}
        }
      {%- elsif request.page_type == 'product' -%}
        {%- if collection -%}
          ,{
            "@type": "ListItem",
            "position": 2,
            "name": {{ collection.title | json }},
            "item": {{ request.origin | append: collection.url | json }}
          },{
            "@type": "ListItem",
            "position": 3,
            "name": {{ product.title | json }},
            "item": {{ request.origin | append: product.url | json }}
          }
        {%- else -%}
          ,{
            "@type": "ListItem",
            "position": 2,
            "name": {{ product.title | json }},
            "item": {{ request.origin | append: product.url | json }}
          }
        {%- endif -%}
      {%- elsif request.page_type == 'blog' -%}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ blog.title | json }},
          "item": {{ request.origin | append: blog.url | json }}
        }
      {%- elsif request.page_type == 'article' -%}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ blog.title | json }},
          "item": {{ request.origin | append: blog.url | json }}
        },{
          "@type": "ListItem",
          "position": 3,
          "name": {{ article.title | json }},
          "item": {{ request.origin | append: article.url | json }}
        }
      {%- elsif request.page_type == 'page' -%}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": {{ page.title | json }},
          "item": {{ request.origin | append: page.url | json }}
        }
      {%- endif -%}
    ]
  }
  </script>
{%- endunless -%}

{%- comment -%} Article Schema - Pages blog {%- endcomment -%}
{%- if request.page_type == 'article' -%}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": {{ article.title | json }},
    "articleBody": {{ article.content | strip_html | truncate: 500 | json }},
    {%- if article.image -%}
      "image": {{ article.image | image_url: width: 1920 | prepend: 'https:' | json }},
    {%- endif -%}
    "datePublished": {{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' | json }},
    "dateModified": {{ article.updated_at | date: '%Y-%m-%dT%H:%M:%SZ' | json }},
    "author": {
      "@type": "Person",
      "name": {{ article.author | json }}
    },
    "publisher": {
      "@type": "Organization",
      "name": {{ shop.name | json }}
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": {{ request.origin | append: article.url | json }}
    }
  }
  </script>
{%- endif -%}

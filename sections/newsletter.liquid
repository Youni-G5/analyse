<!-- Section Newsletter -->

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Titre",
      "default": "Inscription Newsletter"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sous-titre",
      "default": "Sois le premier informé des nouveaux produits et offres spéciales."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texte du bouton",
      "default": "S'inscrire"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Couleur de fond",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Newsletter"
    }
  ]
}
{% endschema %}

<div class="nike-newsletter" style="background: {{ section.settings.bg_color }};">
  <div class="newsletter-wrapper">
    
    <div class="newsletter-content">
      <h3>{{ section.settings.heading }}</h3>
      <p>{{ section.settings.subheading }}</p>
    </div>
    
    {% form 'customer', class: 'newsletter-form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      
      {% if form.posted_successfully? %}
        <div class="success-msg">Merci de ton inscription !</div>
      {% else %}
        <div class="form-group">
          <input 
            type="email" 
            name="contact[email]" 
            placeholder="Adresse email"
            required
            {% if form.errors %}
              class="error"
            {% endif %}
          >
          <button type="submit">{{ section.settings.button_text }}</button>
        </div>
        {% if form.errors %}
          <p class="error-msg">Veuillez entrer une adresse email valide.</p>
        {% endif %}
      {% endif %}
    {% endform %}
    
  </div>
</div>

<style>
  .nike-newsletter {
    padding: 60px 20px;
  }
  
  .newsletter-wrapper {
    max-width: 500px;
    margin: 0 auto;
  }
  
  .newsletter-content {
    margin-bottom: 24px;
  }
  
  .newsletter-content h3 {
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 12px;
    color: #111111;
  }
  
  .newsletter-content p {
    font-size: 14px;
    line-height: 1.5;
    margin: 0;
    color: #757575;
  }
  
  .newsletter-form {
    width: 100%;
  }
  
  .form-group {
    display: flex;
    gap: 8px;
  }
  
  .form-group input {
    flex: 1;
    padding: 14px 16px;
    border: 1px solid #e5e5e5;
    border-radius: 0;
    font-size: 14px;
    background: #ffffff;
    color: #111111;
    font-family: inherit;
    transition: border-color 0.2s;
  }
  
  .form-group input:focus {
    outline: none;
    border-color: #111111;
  }
  
  .form-group input.error {
    border-color: #d43f21;
  }
  
  .form-group input::placeholder {
    color: #8d8d8d;
  }
  
  .form-group button {
    padding: 14px 24px;
    background: #111111;
    color: #ffffff;
    border: none;
    border-radius: 0;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: opacity 0.2s;
    white-space: nowrap;
  }
  
  .form-group button:hover {
    opacity: 0.8;
  }
  
  .success-msg {
    padding: 14px 16px;
    background: #e7f5ec;
    color: #0f6e3b;
    font-size: 14px;
    font-weight: 500;
  }
  
  .error-msg {
    margin-top: 8px;
    font-size: 13px;
    color: #d43f21;
  }
  
  @media (max-width: 640px) {
    .nike-newsletter {
      padding: 40px 16px;
    }
    
    .form-group {
      flex-direction: column;
    }
    
    .form-group button {
      width: 100%;
    }
  }
</style>

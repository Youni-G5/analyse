<!-- article.liquid -->

{% schema %}
{
  "name": "Article",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "Largeur du contenu",
      "options": [
        {
          "value": "narrow",
          "label": "Étroit (680px)"
        },
        {
          "value": "medium",
          "label": "Moyen (800px)"
        },
        {
          "value": "wide",
          "label": "Large (1000px)"
        }
      ],
      "default": "medium"
    },
    {
      "type": "checkbox",
      "id": "show_featured_image",
      "label": "Afficher l'image à la une",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Afficher la date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Afficher l'auteur",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Afficher les tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_share",
      "label": "Afficher les boutons de partage",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_back_link",
      "label": "Afficher le lien retour",
      "default": true
    }
  ]
}
{% endschema %}

<article class="nike-article {{ section.settings.content_width }}">
  
  <!-- Back Link -->
  {% if section.settings.show_back_link %}
    <div class="back-link">
      <a href="{{ blog.url }}">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M19 12H5M12 19l-7-7 7-7" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>Retour</span>
      </a>
    </div>
  {% endif %}

  <!-- Header -->
  <header class="article-header">
    
    {% if section.settings.show_tags and article.tags.size > 0 %}
      <div class="article-tags">
        {% for tag in article.tags limit: 3 %}
          <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>
        {% endfor %}
      </div>
    {% endif %}
    
    <h1>{{ article.title }}</h1>
    
    <div class="article-meta">
      {% if section.settings.show_date %}
        <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
          {{ article.published_at | date: '%d.%m.%Y' }}
        </time>
      {% endif %}
      {% if section.settings.show_author %}
        <span class="author">{{ article.author }}</span>
      {% endif %}
    </div>
    
  </header>

  <!-- Featured Image -->
  {% if section.settings.show_featured_image and article.image %}
    <div class="featured-image">
      <img 
        src="{{ article.image | img_url: '1600x' }}" 
        alt="{{ article.image.alt | default: article.title }}"
        loading="eager"
      >
    </div>
  {% endif %}

  <!-- Content -->
  <div class="article-content">
    {{ article.content }}
  </div>

  <!-- Share -->
  {% if section.settings.show_share %}
    <div class="article-share">
      <span class="share-label">Partager</span>
      <div class="share-buttons">
        <a href="https://twitter.com/intent/tweet?text={{ article.title | url_encode }}&url={{ shop.url }}{{ article.url }}" target="_blank" rel="noopener" aria-label="Partager sur Twitter">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
          </svg>
        </a>
        <a href="https://www.facebook.com/sharer.php?u={{ shop.url }}{{ article.url }}" target="_blank" rel="noopener" aria-label="Partager sur Facebook">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
          </svg>
        </a>
        <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ shop.url }}{{ article.url }}&title={{ article.title | url_encode }}" target="_blank" rel="noopener" aria-label="Partager sur LinkedIn">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"/>
            <circle cx="4" cy="4" r="2"/>
          </svg>
        </a>
      </div>
    </div>
  {% endif %}

</article>

<!-- Related Articles -->
{% if blog.articles_count > 1 %}
  <section class="related-articles">
    <h2>Lire Aussi</h2>
    <div class="related-grid">
      {% for article in blog.articles limit: 3 %}
        {% unless article.id == article.id %}
          <a href="{{ article.url }}" class="related-card">
            {% if article.image %}
              <div class="related-image">
                <img src="{{ article.image | img_url: '600x' }}" alt="{{ article.title }}" loading="lazy">
              </div>
            {% endif %}
            <h3>{{ article.title }}</h3>
            <time>{{ article.published_at | date: '%d.%m.%Y' }}</time>
          </a>
        {% endunless %}
      {% endfor %}
    </div>
  </section>
{% endif %}

<style>
  :root {
    --black: #111111;
    --white: #ffffff;
    --gray: #757575;
    --light-gray: #f7f7f7;
  }
  
  /* Article Container */
  .nike-article {
    max-width: 800px;
    margin: 0 auto;
    padding: clamp(40px, 6vh, 60px) clamp(20px, 4vw, 40px) clamp(80px, 12vh, 120px);
  }
  
  .nike-article.narrow {
    max-width: 680px;
  }
  
  .nike-article.wide {
    max-width: 1000px;
  }
  
  /* Back Link */
  .back-link {
    margin-bottom: clamp(32px, 5vh, 48px);
  }
  
  .back-link a {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 12px 24px;
    background: var(--light-gray);
    color: var(--black);
    text-decoration: none;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.2s;
  }
  
  .back-link a:hover {
    background: var(--black);
    color: var(--white);
  }
  
  /* Header */
  .article-header {
    margin-bottom: clamp(40px, 6vh, 60px);
  }
  
  .article-tags {
    display: flex;
    gap: 12px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }
  
  .article-tags a {
    padding: 6px 16px;
    background: var(--black);
    color: var(--white);
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-decoration: none;
    transition: background 0.2s;
  }
  
  .article-tags a:hover {
    background: var(--gray);
  }
  
  .article-header h1 {
    font-size: clamp(36px, 6vw, 72px);
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin: 0 0 clamp(24px, 4vh, 32px);
    color: var(--black);
  }
  
  .article-meta {
    display: flex;
    gap: 20px;
    align-items: center;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--gray);
  }
  
  .article-meta time::after {
    content: "•";
    margin-left: 20px;
  }
  
  /* Featured Image */
  .featured-image {
    margin-bottom: clamp(48px, 8vh, 80px);
    background: var(--light-gray);
  }
  
  .featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  /* Content - Typography Nike */
  .article-content {
    font-size: clamp(17px, 2vw, 20px);
    line-height: 1.8;
    color: var(--black);
  }
  
  .article-content > * {
    margin-bottom: clamp(24px, 4vh, 32px);
  }
  
  .article-content > *:last-child {
    margin-bottom: 0;
  }
  
  .article-content h2,
  .article-content h3,
  .article-content h4 {
    font-weight: 900;
    line-height: 1.2;
    letter-spacing: -0.02em;
    margin-top: clamp(48px, 8vh, 64px);
    color: var(--black);
  }
  
  .article-content h2 {
    font-size: clamp(28px, 4vw, 44px);
    text-transform: uppercase;
  }
  
  .article-content h3 {
    font-size: clamp(24px, 3vw, 32px);
  }
  
  .article-content h4 {
    font-size: clamp(20px, 2.5vw, 24px);
  }
  
  .article-content p {
    margin: 0 0 clamp(24px, 4vh, 32px);
  }
  
  .article-content strong {
    font-weight: 700;
    color: var(--black);
  }
  
  .article-content a {
    color: var(--black);
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-thickness: 2px;
    font-weight: 600;
    transition: opacity 0.2s;
  }
  
  .article-content a:hover {
    opacity: 0.6;
  }
  
  .article-content img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: clamp(48px, 8vh, 64px) 0;
  }
  
  .article-content ul,
  .article-content ol {
    padding-left: 24px;
  }
  
  .article-content li {
    margin-bottom: 12px;
  }
  
  .article-content blockquote {
    margin: clamp(48px, 8vh, 64px) 0;
    padding: clamp(32px, 5vh, 48px) clamp(24px, 4vw, 40px);
    background: var(--light-gray);
    border-left: 4px solid var(--black);
    font-size: clamp(20px, 2.5vw, 28px);
    font-weight: 600;
    line-height: 1.5;
    font-style: italic;
  }
  
  .article-content blockquote p {
    margin: 0;
  }
  
  /* Share */
  .article-share {
    display: flex;
    align-items: center;
    gap: 24px;
    margin-top: clamp(60px, 10vh, 80px);
    padding-top: clamp(40px, 6vh, 60px);
    border-top: 2px solid #e5e5e5;
  }
  
  .share-label {
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--black);
  }
  
  .share-buttons {
    display: flex;
    gap: 16px;
  }
  
  .share-buttons a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--black);
    color: var(--white);
    transition: all 0.2s;
  }
  
  .share-buttons a:hover {
    background: var(--gray);
    transform: translateY(-2px);
  }
  
  /* Related Articles */
  .related-articles {
    max-width: 1400px;
    margin: 0 auto;
    padding: clamp(60px, 10vh, 100px) clamp(20px, 4vw, 40px);
    border-top: 2px solid #e5e5e5;
  }
  
  .related-articles h2 {
    font-size: clamp(32px, 5vw, 56px);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.03em;
    margin: 0 0 clamp(32px, 5vh, 48px);
    color: var(--black);
  }
  
  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: clamp(16px, 3vw, 32px);
  }
  
  .related-card {
    display: block;
    text-decoration: none;
    color: var(--black);
    transition: transform 0.3s;
  }
  
  .related-card:hover {
    transform: translateY(-4px);
  }
  
  .related-image {
    width: 100%;
    padding-bottom: 75%;
    background: var(--light-gray);
    position: relative;
    overflow: hidden;
    margin-bottom: 16px;
  }
  
  .related-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .related-card h3 {
    font-size: clamp(18px, 2vw, 22px);
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 8px;
    color: var(--black);
  }
  
  .related-card time {
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--gray);
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .related-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 640px) {
    .nike-article {
      padding: 32px 20px 60px;
    }
    
    .related-grid {
      grid-template-columns: 1fr;
    }
    
    .article-share {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }
  }
</style>

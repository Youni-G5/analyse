<style>
/* --- STYLES GÉNÉRAUX HEADER --- */
.goat-header { 
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif; 
  font-size: 13px; line-height: 16px; -webkit-font-smoothing: antialiased; 
  position: fixed; top: 0; left: 0; right: 0; height: 58px; 
  background: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }}; 
  border-bottom: 1px solid {{ section.settings.border_color }}; 
  z-index: 9999; display: flex; align-items: center; 
}

.goat-header__wrapper { width: 100%; max-width: {{ section.settings.max_width }}px; margin: 0 auto; padding: 0 24px; display: flex; align-items: center; justify-content: space-between; position: relative; }

/* SEARCH DESKTOP */
.goat-header__search-desktop { display: flex; align-items: center; position: relative; width: 260px; }
.goat-header__search-form { width: 100%; position: relative; }
.goat-header__search-input { width: 100%; border: 1px solid rgba(255,255,255,0.3); border-radius: 4px; background: rgba(255,255,255,0.1); padding: 8px 12px; color: {{ section.settings.text_color }}; }
.goat-header__search-input:focus { outline: none; border-color: rgba(255,255,255,0.6); }
.goat-header__search-results { position: absolute; top: 38px; left: 0; right: 0; background: {{ section.settings.bg_color }}; border: 1px solid rgba(255,255,255,0.3); border-radius: 4px; overflow: hidden; display: none; max-height: 340px; overflow-y: auto; z-index: 100; }
.goat-header__search-results.active { display: block; }
.goat-header__search-section { border-bottom: 1px solid rgba(255,255,255,0.1); padding: 8px 0; }
.goat-header__search-section:last-child { border-bottom: none; }
.goat-header__search-title { padding: 6px 12px; font-size: 11px; text-transform: uppercase; letter-spacing: 1px; color: rgba(255,255,255,0.6); }
.goat-header__search-item { display: flex; align-items: center; gap: 8px; padding: 8px 12px; text-decoration: none; color: {{ section.settings.text_color }}; transition: background 0.2s; }
.goat-header__search-item:hover { background: rgba(255,255,255,0.1); }
.goat-header__search-item img { width: 40px; height: 40px; object-fit: cover; border-radius: 3px; }

/* LOGO */
.goat-header__logo { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 10; cursor: pointer; }
.goat-header__logo a { display: flex; align-items: center; text-decoration: none; }
.goat-header__logo button { display: flex; align-items: center; background: none; border: none; padding: 0; cursor: pointer; }
.goat-header__logo-img { max-height: {{ section.settings.logo_height_desktop }}px; width: auto; }

/* RIGHT CONTAINER & NAV */
.goat-header__right-container { display: flex; align-items: center; gap: 24px; }
.goat-header__locale-container { margin-right: 40px; display: flex; align-items: center; } /* Marge pour écarter le bouton desktop */
.goat-header__nav-inline { display: flex; }
.goat-header__nav-list { display: flex; list-style: none; margin: 0; padding: 0; gap: 24px; align-items: center; }
.goat-header__nav-link { color: {{ section.settings.text_color }}; text-decoration: none; font-weight: 500; transition: opacity 0.2s; white-space: nowrap; }
.goat-header__nav-link:hover { opacity: 0.7; }
.goat-header__account { color: {{ section.settings.text_color }}; text-decoration: none; font-weight: 500; white-space: nowrap; }
.goat-header__account:hover { opacity: 0.7; }

/* CART */
.goat-header__cart { position: relative; display: flex; align-items: center; gap: 6px; color: {{ section.settings.text_color }}; text-decoration: none; font-weight: 500; transition: opacity 0.2s; cursor: pointer; }
.goat-header__cart:hover { opacity: 0.7; }
.goat-header__cart-icon { width: 22px; height: 22px; position: relative; }
.goat-header__cart-icon svg { width: 100%; height: 100%; stroke: {{ section.settings.text_color }}; fill: none; }
.goat-header__cart-count { position: absolute; top: -8px; right: -10px; background: {{ section.settings.text_color }}; color: {{ section.settings.bg_color }}; font-size: 10px; font-weight: 700; min-width: 18px; height: 18px; border-radius: 9px; display: none; align-items: center; justify-content: center; padding: 0 5px; line-height: 1; }
.goat-header__cart-count.active { display: flex; }
.goat-header__cart-text-only { position: relative; display: flex; align-items: center; gap: 8px; color: {{ section.settings.text_color }}; text-decoration: none; font-weight: 500; transition: opacity 0.2s; }
.goat-header__cart-text-only:hover { opacity: 0.7; }
.goat-header__cart-text-count { background: {{ section.settings.text_color }}; color: {{ section.settings.bg_color }}; font-size: 11px; font-weight: 700; min-width: 22px; height: 22px; border-radius: 11px; display: none; align-items: center; justify-content: center; padding: 0 6px; line-height: 1; }
.goat-header__cart-text-count.active { display: flex; }

/* MOBILE ELEMENTS */
.goat-header__desktop-menu { display: none; }
.goat-header__hamburger-button { background: none; border: none; padding: 8px; display: flex; flex-direction: column; justify-content: center; align-items: center; gap: 5px; cursor: pointer; width: 36px; height: 36px; position: relative; }
.goat-header__hamburger-button:hover { opacity: 0.7; }
.goat-header__hamburger-line { width: 22px; height: 2px; background: {{ section.settings.text_color }}; border-radius: 2px; transition: all 0.3s ease; position: absolute; }
.goat-header__hamburger-line:nth-child(1) { top: 9px; }
.goat-header__hamburger-line:nth-child(2) { top: 17px; }
.goat-header__hamburger-line:nth-child(3) { top: 25px; }
.goat-header__hamburger-button.active .goat-header__hamburger-line:nth-child(1) { top: 17px; transform: rotate(45deg); }
.goat-header__hamburger-button.active .goat-header__hamburger-line:nth-child(2) { opacity: 0; }
.goat-header__hamburger-button.active .goat-header__hamburger-line:nth-child(3) { top: 17px; transform: rotate(-45deg); }
.goat-header__search-mobile { display: none; width: 100%; order: 2; position: relative; }
.goat-header__search-mobile input { width: 100%; border: 1px solid rgba(255,255,255,0.3); border-radius: 4px; background: transparent; padding: 8px 12px; color: {{ section.settings.text_color }}; }
.goat-header__menu { display: none; }

/* --- DRAWER MOBILE (AMÉLIORÉ) --- */
.goat-header__drawer { 
  position: fixed; 
  top: 58px; 
  right: -100%; 
  width: 280px; 
  /* Hauteur dynamique pour mobile */
  bottom: 0; 
  height: auto;
  background: {{ section.settings.bg_color }}; 
  border-left: 1px solid {{ section.settings.border_color }}; 
  transition: right 0.3s ease; 
  z-index: 9998; 
  display: flex;
  flex-direction: column; /* Empilement vertical */
  padding: 0; /* Reset padding pour gérer via flex */
}

.goat-header__drawer.active { right: 0; }

/* Zone de contenu scrollable (Liens) */
.goat-header__drawer-scroll-area {
  flex-grow: 1; /* Prend tout l'espace disponible */
  overflow-y: auto; /* Scroll uniquement ici */
  padding: 24px 0;
  -webkit-overflow-scrolling: touch;
}

/* Footer du Drawer (Bouton Sélecteur) - Fixé en bas */
.goat-header__drawer-locale {
  flex-shrink: 0; /* Ne jamais rétrécir */
  padding: 24px;
  border-top: 1px solid rgba(255,255,255,0.1);
  background: {{ section.settings.bg_color }};
  position: relative;
  z-index: 10;
  /* Fix pour les bugs d'affichage iOS */
  transform: translate3d(0,0,0); 
}

.goat-header__drawer-overlay { position: fixed; top: 58px; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.5); opacity: 0; visibility: hidden; transition: opacity 0.3s ease, visibility 0.3s ease; z-index: 9997; }
.goat-header__drawer-overlay.active { opacity: 1; visibility: visible; }
.goat-header__drawer-nav { list-style: none; margin: 0; padding: 0; }
.goat-header__drawer-link { display: block; padding: 16px 24px; color: {{ section.settings.text_color }}; text-decoration: none; font-weight: 500; border-bottom: 1px solid rgba(255,255,255,0.1); transition: background 0.2s; }
.goat-header__drawer-link:hover { background: rgba(255,255,255,0.05); }
.goat-header__drawer-account { display: block; padding: 16px 24px; color: {{ section.settings.text_color }}; text-decoration: none; font-weight: 600; margin-top: 8px; background: rgba(255,255,255,0.1); }
.goat-header__drawer-account:hover { background: rgba(255,255,255,0.15); }
.goat-header__drawer-cart { display: none; padding: 16px 24px; color: {{ section.settings.text_color }}; text-decoration: none; font-weight: 600; margin-top: 8px; background: rgba(255,255,255,0.1); align-items: center; justify-content: space-between; }
.goat-header__drawer-cart:hover { background: rgba(255,255,255,0.15); }
.goat-header__drawer-cart-badge { background: {{ section.settings.text_color }}; color: {{ section.settings.bg_color }}; font-size: 11px; font-weight: 700; min-width: 24px; height: 24px; border-radius: 12px; display: flex; align-items: center; justify-content: center; padding: 0 8px; }

/* MEDIA QUERIES */
{% if section.settings.desktop_menu_style == 'hamburger' %}@media (min-width: 991px) { .goat-header__nav-inline { display: none; } .goat-header__desktop-menu { display: block; } }{% endif %}
{% if section.settings.cart_display_type == 'text' %}@media (min-width: 991px) { .goat-header__cart { display: none; } }{% else %}@media (min-width: 991px) { .goat-header__cart-text-only { display: none; } }{% endif %}

/* Cacher le bouton du drawer mobile sur Desktop */
@media (min-width: 991px) {
  .goat-header__drawer-locale { display: none; }
}

@media (max-width: 990px) { 
  .goat-header__wrapper { display: grid; grid-template-columns: auto 1fr auto; gap: 16px; padding: 0 16px; } 
  .goat-header__logo { position: static; transform: none; order: 1; } 
  .goat-header__logo-img { max-height: {{ section.settings.logo_height_mobile }}px; } 
  .goat-header__search-desktop { display: none; } .goat-header__right-container { display: none; } 
  .goat-header__search-mobile { display: block; } .goat-header__menu { display: block; order: 3; } 
  .goat-header__drawer-cart { display: flex; } 
}

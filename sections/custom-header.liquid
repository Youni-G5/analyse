<header class="goat-header">
  <div class="goat-header__wrapper">

    {% if section.settings.show_search %}
    <div class="goat-header__search-desktop">
      <form action="{{ routes.search_url }}" method="get" class="goat-header__search-form">
        <input id="searchInputDesktop" type="search" name="q" placeholder="{{ section.settings.search_text }}" class="goat-header__search-input" autocomplete="off">
        <div id="searchResultsDesktop" class="goat-header__search-results"></div>
      </form>
    </div>
    {% endif %}

    <div class="goat-header__logo">
      {% if section.settings.logo_redirect_enabled %}
        <button id="logoButton" class="goat-header__logo-btn" aria-label="Logo">
          {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: width: 300 }}" alt="{{ shop.name }}" class="goat-header__logo-img" width="300" height="auto" loading="lazy">
          {% else %}
          <span>{{ shop.name }}</span>
          {% endif %}
        </button>
      {% else %}
        <a href="{{ routes.root_url }}">
          {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: width: 300 }}" alt="{{ shop.name }}" class="goat-header__logo-img" width="300" height="auto" loading="lazy">
          {% else %}
          <span>{{ shop.name }}</span>
          {% endif %}
        </a>
      {% endif %}
    </div>

    {% if section.settings.show_search %}
    <div class="goat-header__search-mobile">
      <form action="{{ routes.search_url }}" method="get">
        <input id="searchInputMobile" type="search" name="q" placeholder="{{ section.settings.search_text }}" autocomplete="off">
        <div id="searchResultsMobile" class="goat-header__search-results"></div>
      </form>
    </div>
    {% endif %}

    <div class="goat-header__right-container">
      
      <!-- BOUTON LOCALISATION DESKTOP -->
      <div class="goat-header__locale-container">
        {% render 'localization-modal', button_style: 'header' %}
      </div>

      <!-- Navigation inline (par défaut) -->
      <nav class="goat-header__nav-inline">
        <ul class="goat-header__nav-list">
          {% for link in section.settings.menu.links %}
          <li><a href="{{ link.url }}" class="goat-header__nav-link">{{ link.title }}</a></li>
          {% endfor %}
          {% if section.settings.show_account %}
          <li><a href="{{ routes.account_url }}" class="goat-header__account">{{ section.settings.account_text }}</a></li>
          {% endif %}
        </ul>
      </nav>

      <!-- Panier avec icône -->
      {% if section.settings.show_cart %}
        {% if section.settings.cart_action == 'drawer' %}
          <button data-cart-drawer-open class="goat-header__cart" style="border: none; background: none;">
            <div class="goat-header__cart-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <path d="M16 10a4 4 0 0 1-8 0"></path>
              </svg>
              <span class="goat-header__cart-count" data-cart-count id="cartCount">0</span>
            </div>
          </button>
        {% else %}
          <a href="{{ routes.cart_url }}" class="goat-header__cart">
            <div class="goat-header__cart-icon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                <line x1="3" y1="6" x2="21" y2="6"></line>
                <path d="M16 10a4 4 0 0 1-8 0"></path>
              </svg>
              <span class="goat-header__cart-count" data-cart-count id="cartCount">0</span>
            </div>
          </a>
        {% endif %}

        <!-- Panier texte seulement -->
        {% if section.settings.cart_action == 'drawer' %}
          <button data-cart-drawer-open class="goat-header__cart-text-only" style="border: none; background: none;">
            <span>{{ section.settings.cart_text }}</span>
            <span class="goat-header__cart-text-count" data-cart-count id="cartCountText">0</span>
          </button>
        {% else %}
          <a href="{{ routes.cart_url }}" class="goat-header__cart-text-only">
            <span>{{ section.settings.cart_text }}</span>
            <span class="goat-header__cart-text-count" data-cart-count id="cartCountText">0</span>
          </a>
        {% endif %}
      {% endif %}

      <!-- Menu hamburger desktop (optionnel, après le panier) -->
      <div class="goat-header__desktop-menu">
        <button id="desktopHamburgerButton" class="goat-header__hamburger-button" aria-label="Menu" aria-expanded="false">
          <span class="goat-header__hamburger-line"></span>
          <span class="goat-header__hamburger-line"></span>
          <span class="goat-header__hamburger-line"></span>
        </button>
      </div>

    </div>

    <div class="goat-header__menu">
      <button id="hamburgerButton" class="goat-header__hamburger-button" aria-label="Menu" aria-expanded="false">
        <span class="goat-header__hamburger-line"></span>
        <span class="goat-header__hamburger-line"></span>
        <span class="goat-header__hamburger-line"></span>
      </button>
    </div>

  </div>
</header>



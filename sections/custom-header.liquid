<script>
  // Search functionality
  async function fetchSuggestions(query, resultContainer) {
    if (!query.trim()) {
      resultContainer.innerHTML = "";
      resultContainer.classList.remove("active");
      return;
    }

    const endpoint = `/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product,collection,page&resources[limit]=10`;
    const response = await fetch(endpoint);
    const data = await response.json();

    let html = "";

    const excludedTag = '{{ section.settings.excluded_tag }}';

    let products = data.resources.results.products;
    if (excludedTag) {
      products = products.filter(p => !p.tags.includes(excludedTag));
    }
    products = products.slice(0, 4);

    const collections = data.resources.results.collections;
    const pages = data.resources.results.pages;

    if (products.length) {
      html += `<div class="goat-header__search-section"><div class="goat-header__search-title">Produits</div>`;
      html += products.map(p => `
        <a href="${p.url}" class="goat-header__search-item">
          <img src="${p.image}" alt="${p.title}" width="40" height="40" loading="lazy">
          <span>${p.title}</span>
        </a>`).join('');
      html += '</div>';
    }

    if (collections.length) {
      html += `<div class="goat-header__search-section"><div class="goat-header__search-title">Collections</div>`;
      html += collections.slice(0, 4).map(c => `
        <a href="${c.url}" class="goat-header__search-item">
          <span>${c.title}</span>
        </a>`).join('');
      html += '</div>';
    }

    if (pages.length) {
      html += `<div class="goat-header__search-section"><div class="goat-header__search-title">Pages</div>`;
      html += pages.slice(0, 4).map(pg => `
        <a href="${pg.url}" class="goat-header__search-item">
          <span>${pg.title}</span>
        </a>`).join('');
      html += '</div>';
    }

    if (!products.length && !collections.length && !pages.length) {
      html = `<div class="goat-header__search-section"><div class="goat-header__search-item">Aucun résultat</div></div>`;
    }

    resultContainer.innerHTML = html;
    resultContainer.classList.add('active');
  }

  function setupSearch(inputId, resultId) {
    const input = document.getElementById(inputId);
    const results = document.getElementById(resultId);
    if (!input) return;

    input.addEventListener('input', async () => {
      await fetchSuggestions(input.value, results);
    });

    document.addEventListener('click', (e) => {
      if (!results.contains(e.target) && e.target !== input) {
        results.classList.remove('active');
      }
    });
  }

  setupSearch('searchInputDesktop', 'searchResultsDesktop');
  setupSearch('searchInputMobile', 'searchResultsMobile');

  // Logo redirect functionality
  const logoButton = document.getElementById('logoButton');
  if (logoButton) {
    logoButton.addEventListener('click', function() {
      const redirectUrl = '{{ section.settings.logo_redirect_url }}';
      if (redirectUrl) {
        window.location.href = redirectUrl;
      }
    });
  }

  // Mobile menu functionality
  const hamburgerButton = document.getElementById('hamburgerButton');
  const desktopHamburgerButton = document.getElementById('desktopHamburgerButton');
  const mobileDrawer = document.getElementById('mobileDrawer');
  const drawerOverlay = document.getElementById('drawerOverlay');

  function toggleMenu(button) {
    button.classList.toggle('active');
    mobileDrawer.classList.toggle('active');
    drawerOverlay.classList.toggle('active');
    
    const isExpanded = button.classList.contains('active');
    button.setAttribute('aria-expanded', isExpanded);
    
    document.body.style.overflow = isExpanded ? 'hidden' : '';
  }

  if (hamburgerButton) {
    hamburgerButton.addEventListener('click', () => toggleMenu(hamburgerButton));
  }

  if (desktopHamburgerButton) {
    desktopHamburgerButton.addEventListener('click', () => toggleMenu(desktopHamburgerButton));
  }

  drawerOverlay.addEventListener('click', () => {
    if (hamburgerButton) hamburgerButton.classList.remove('active');
    if (desktopHamburgerButton) desktopHamburgerButton.classList.remove('active');
    mobileDrawer.classList.remove('active');
    drawerOverlay.classList.remove('active');
    document.body.style.overflow = '';
  });

  // Close menu when link is clicked
  document.querySelectorAll('.goat-header__drawer-link, .goat-header__drawer-account, .goat-header__drawer-cart').forEach(link => {
    link.addEventListener('click', () => {
      if (mobileDrawer.classList.contains('active')) {
        if (hamburgerButton) hamburgerButton.classList.remove('active');
        if (desktopHamburgerButton) desktopHamburgerButton.classList.remove('active');
        mobileDrawer.classList.remove('active');
        drawerOverlay.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  });

  // Update cart count dynamically
  function updateCartCount() {
    fetch('/cart.js')
      .then(response => response.json())
      .then(cart => {
        document.querySelectorAll('[data-cart-count]').forEach(el => {
          el.textContent = cart.item_count || 0;
          if (cart.item_count > 0) {
            el.classList.add('active');
          } else {
            el.classList.remove('active');
          }
        });
      });
  }

  document.addEventListener('DOMContentLoaded', updateCartCount);
</script>



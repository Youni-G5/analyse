  "name": "Page Wishlist Signature",
  "settings": [
    {
      "type": "header",
      "content": "Contenu de la page"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Ma Wishlist"
    }
  ]
}
{% endschema %}

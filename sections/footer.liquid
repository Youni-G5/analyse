<footer id="site-footer" class="footer-wrapper">
  <div class="footer-flex-wrapper">
    
    <div class="footer-links-wrapper">
      <div class="footer-navigation-mobile">
        {%- for block in section.blocks -%}
          {%- if block.type == 'link_list' -%}
            <section {{ block.shopify_attributes }} class="footer-nav-item">
              <h6 data-qa="footer_{{ block.settings.title | handleize }}" class="footer-nav-title">
                {{ block.settings.title }}
              </h6>
              <ul class="footer-unordered-list">
                {%- for link in block.settings.menu.links -%}
                  <li>
                    <a 
                      data-qa="footer_nav_{{ link.title | handleize }}" 
                      role="link" 
                      tabindex="0" 
                      target="{% if link.url contains 'http' %}_blank{% else %}_self{% endif %}" 
                      rel="noreferrer noopener" 
                      href="{{ link.url }}"
                    >
                      {{ link.title }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            </section>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>

    <div class="footer-newsletter-wrapper">
      <div class="email-newsletter-wrapper">
        <p>{{ section.settings.newsletter_text }}</p>
        
        {% form 'customer', class: 'newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          
          <div class="newsletter-input-group">
            <div class="input-wrapper">
              <input 
                id="emailNewsletter" 
                name="contact[email]" 
                placeholder="{{ section.settings.email_placeholder }}" 
                data-qa="email_newsletter" 
                type="email" 
                class="newsletter-input" 
                value=""
                required
              >
              <button 
                type="submit" 
                value="{{ section.settings.submit_text }}" 
                data-qa="email_newsletter_submit" 
                class="newsletter-submit-button"
              >
                <span>{{ section.settings.submit_text }}</span>
              </button>
            </div>
          </div>
          
          <div data-qa="email_newsletter_disclaimer" class="newsletter-disclaimer">
            <span>{{ section.settings.disclaimer_text_1 }} </span>
            <a target="_blank" href="{{ section.settings.terms_link }}">{{ section.settings.terms_text }}</a>
            <span> {{ section.settings.disclaimer_text_2 }} </span>
            <a target="_blank" href="{{ section.settings.privacy_link }}">{{ section.settings.privacy_text }}</a>.
          </div>
        {% endform %}
      </div>
    </div>
    
  </div>

  <div class="footer-bottom-wrapper">
    <!-- Copyright aligné à gauche -->
    <div class="footer-copyright">
      <span>© {{ 'now' | date: '%Y' }}</span>
      <span> {{ shop.name }}. Tous droits réservés</span>
    </div>

    <div class="footer-bottom-right">
      <!-- Wrapper ajouté pour le positionnement Grid du bouton localisation -->
      <div class="footer-localization-wrapper">
        {% render 'localization-modal' %}
      </div>

      {%- if settings.social_facebook_link != blank or settings.social_instagram_link != blank or settings.social_x_link != blank or settings.social_tiktok_link != blank or settings.social_pinterest_link != blank or settings.social_youtube_link != blank -%}
        <div class="footer-social-links">
          {%- if settings.social_facebook_link != blank -%}
            <a href="{{ settings.social_facebook_link }}" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Facebook">

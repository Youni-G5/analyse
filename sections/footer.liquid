<style>
  #site-footer {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-size: 11.5px;
    line-height: 16px;
    -webkit-font-smoothing: antialiased;
    color: rgb(255, 255, 255);
    scroll-behavior: smooth;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    background-color: rgb(0, 0, 0);
    padding-top: 64px;
  }

  .footer-wrapper { width: 100%; }
  .footer-flex-wrapper {
    display: flex;
    flex-direction: column;
    padding: 0 16px;
    max-width: 1440px;
    margin: 0 auto;
    width: 100%;
  }

  .footer-newsletter-wrapper { margin-bottom: 40px; order: 1; }
  .email-newsletter-wrapper { width: 100%; }
  .email-newsletter-wrapper p {
    font-size: 12px; line-height: 18px; margin-bottom: 16px; color: #fff; margin-top: 0;
  }

  .newsletter-form { display: flex; flex-direction: column; gap: 12px; }
  .newsletter-input-group { width: 100%; }
  .input-wrapper { position: relative; display: flex; align-items: stretch; border: 1px solid #fff; }
  .newsletter-input {
    flex: 1; padding: 12px 16px; background: #000; border: none; color: #fff;
    font-size: 14px; line-height: 20px; outline: none; font-family: inherit;
  }
  .newsletter-input::placeholder { color: rgba(255, 255, 255, 0.6); }
  .newsletter-submit-button {
    padding: 12px 24px; background: #fff; color: #000; border: none;
    font-size: 14px; font-weight: 600; cursor: pointer; transition: 0.2s; white-space: nowrap;
  }
  .newsletter-submit-button:hover { background: rgba(255, 255, 255, 0.9); }
  .newsletter-disclaimer { font-size: 11px; line-height: 15px; color: rgba(255, 255, 255, 0.6); }
  .newsletter-disclaimer a { color: rgba(255, 255, 255, 0.6); text-decoration: underline; }
  .newsletter-disclaimer a:hover { color: #fff; }

  .footer-links-wrapper { margin-bottom: 40px; order: 2; }
  .footer-navigation-mobile { display: grid; grid-template-columns: 1fr 1fr; gap: 32px 16px; }
  .footer-nav-item { margin-bottom: 0; }
  .footer-nav-title { font-size: 14px; font-weight: 600; margin-bottom: 12px; color: #fff; }
  .footer-unordered-list { list-style: none; padding: 0; margin: 0; }
  .footer-unordered-list li { margin-bottom: 8px; }
  .footer-unordered-list a {
    color: rgba(255, 255, 255, 0.7); text-decoration: none; font-size: 11.5px; transition: color 0.2s;
  }
  .footer-unordered-list a:hover { color: #fff; }

  /* NOUVELLE STRUCTURE CSS POUR LE FOOTER BOTTOM (MOBILE FIRST) */
  .footer-bottom-wrapper {
    padding: 24px 16px; 
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    /* Utilisation de Grid pour le mobile */
    display: grid;
    grid-template-columns: 1fr auto; /* 2 colonnes : gauche flexible, droite auto */
    row-gap: 24px;
    align-items: center;
  }

  .footer-copyright { 
    font-size: 11px; 
    color: rgba(255, 255, 255, 0.6);
    /* Grid: Ligne 1, Colonne 1 */
    grid-column: 1;
    grid-row: 1;
    text-align: left;
  }

  /* On utilise display: contents pour "annuler" le wrapper sur mobile et traiter ses enfants comme des items de la grille principale */
  .footer-bottom-right { 
    display: contents; 
  }

  .footer-localization-wrapper {
    /* Grid: Ligne 1, Colonne 2 */
    grid-column: 2;
    grid-row: 1;
    justify-self: end;
  }

  .footer-social-links { 
    display: flex; 
    gap: 16px;
    /* Grid: Ligne 2, prend toute la largeur */
    grid-column: 1 / -1;
    grid-row: 2;
    justify-self: center; /* Centré horizontalement */
  }

  .social-link {
    color: rgba(255, 255, 255, 0.7); transition: all 0.2s; display: flex; align-items: center; justify-content: center;
  }
  .social-link:hover { color: #fff; transform: translateY(-2px); }

  /* MEDIA QUERIES POUR DESKTOP */
  @media (min-width: 768px) {
    .footer-flex-wrapper { padding: 0 40px; }
    .footer-newsletter-wrapper { margin-bottom: 48px; }
    .email-newsletter-wrapper { max-width: 600px; }
    .footer-navigation-mobile { grid-template-columns: repeat(3, 1fr); gap: 48px 32px; }
    
    /* Retour à Flexbox pour Desktop */
    .footer-bottom-wrapper { 
      padding: 32px 40px; 
      display: flex; 
      flex-direction: row; 
      justify-content: space-between; 
      row-gap: 0;
    }
    
    .footer-copyright { width: auto; }
    
    /* Restauration du wrapper de droite en Flexbox */
    .footer-bottom-right { 
      display: flex; 
      flex-direction: row; 
      gap: 24px; 
      align-items: center;
    }
    
    .footer-localization-wrapper, .footer-social-links {
      /* Reset des propriétés Grid */
      grid-column: auto;
      grid-row: auto;
      justify-self: auto;
    }

    .footer-social-links { gap: 20px; }
  }

  @media (min-width: 1024px) {
    #site-footer { padding-top: 32px; padding-bottom: 0; }
    .footer-flex-wrapper { padding: 0 48px; flex-direction: row; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; }
    .footer-links-wrapper { order: 1; flex: 1; margin-bottom: 32px; }
    .footer-navigation-mobile { display: flex; gap: 0; }
    .footer-nav-item { margin-right: 32px; }
    .footer-newsletter-wrapper { order: 2; width: 400px; margin-bottom: 32px; }
    .footer-bottom-wrapper { width: 100%; padding: 20px 48px; order: 3; }
  }

  @media (min-width: 1280px) {
    .footer-flex-wrapper { padding: 0 80px; }
    .footer-bottom-wrapper { padding: 24px 80px; }
    .footer-newsletter-wrapper { width: 450px; }
  }

  #site-footer * { box-sizing: border-box; }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    { "type": "header", "content": "Newsletter Section" },
    { "type": "text", "id": "newsletter_text", "label": "Newsletter Text", "default": "Je veux recevoir des e-mails avec des promos exclusives, les sorties du moment et bien plus." },
    { "type": "text", "id": "email_placeholder", "label": "Email Placeholder", "default": "Adresse e-mail" },
    { "type": "text", "id": "submit_text", "label": "Submit Button Text", "default": "S'inscrire" },
    { "type": "text", "id": "disclaimer_text_1", "label": "Disclaimer Text (Part 1)", "default": "En vous inscrivant, vous confirmez vouloir recevoir des e-mails sur nos produits et services, et vous acceptez nos" },
    { "type": "text", "id": "terms_text", "label": "Terms Link Text", "default": "conditions générales" },
    { "type": "url", "id": "terms_link", "label": "Terms Link" },
    { "type": "text", "id": "disclaimer_text_2", "label": "Disclaimer Text (Part 2)", "default": "et notre" },
    { "type": "text", "id": "privacy_text", "label": "Privacy Link Text", "default": "politique de confidentialité" },
    { "type": "url", "id": "privacy_link", "label": "Privacy Link" }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Navigation Column",
      "settings": [
        { "type": "text", "id": "title", "label": "Heading", "default": "Quick Links" },
        { "type": "link_list", "id": "menu", "label": "Menu", "default": "footer" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Footer",
      "blocks": [
        { "type": "link_list", "settings": { "title": "À propos" } },
        { "type": "link_list", "settings": { "title": "Acheter" } },
        { "type": "link_list", "settings": { "title": "Vendre" } },
        { "type": "link_list", "settings": { "title": "Aide" } },
        { "type": "link_list", "settings": { "title": "CGV et préférences" } }
      ]
    }
  ]
}
{% endschema %}

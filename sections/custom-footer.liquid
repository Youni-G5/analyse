<footer class="footer-pogba">
  <div class="footer-grid">
    {% for block in section.blocks %}
      {% case block.type %}

        {% when 'preorder' %}
          {% if block.settings.preorder_title != blank or block.settings.preorder_text != blank %}
          <div class="footer-box footer-preorder">
            {% if block.settings.preorder_title != blank %}
              <h3 class="footer-box-title">{{ block.settings.preorder_title }}</h3>
            {% endif %}
            {% if block.settings.preorder_text != blank %}
              <p class="footer-box-text">{{ block.settings.preorder_text }}</p>
            {% endif %}
          </div>
          {% endif %}

        {% when 'support' %}
          {% if block.settings.support_title != blank or block.settings.support_text != blank %}
          <div class="footer-box footer-support">
            {% if block.settings.support_title != blank %}
              <h3 class="footer-box-title">{{ block.settings.support_title }}</h3>
            {% endif %}
            {% if block.settings.support_text != blank %}
              <p class="footer-box-text">
                {{ block.settings.support_text }}<br>
                <a href="mailto:{{ shop.email }}" class="footer-link">{{ shop.email }}</a>
              </p>
            {% endif %}
          </div>
          {% endif %}

        {% when 'policy_menu' %}
          {% assign links = linklists[block.settings.policy_menu] %}
          {% if links != nil and links.links.size > 0 %}
          <div class="footer-box footer-policy">
            {% if block.settings.policy_title != blank %}
              <h3 class="footer-box-title">{{ block.settings.policy_title }}</h3>
            {% endif %}
            <nav>
              <ul class="footer-links-list">
                {% for link in links.links %}
                  <li><a href="{{ link.url }}" class="footer-link">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </nav>
          </div>
          {% endif %}

        {% when 'shop_menu' %}
          {% assign links = linklists[block.settings.shop_menu] %}
          {% if links != nil and links.links.size > 0 %}
          <div class="footer-box footer-shop">
            {% if block.settings.shop_title != blank %}
              <h3 class="footer-box-title">{{ block.settings.shop_title }}</h3>
            {% endif %}
            <nav>
              <ul class="footer-links-list">
                {% for link in links.links %}
                  <li><a href="{{ link.url }}" class="footer-link">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </nav>
          </div>
          {% endif %}

        {% when 'social_and_logo' %}
          {% comment %} Compter les réseaux sociaux remplis {% endcomment %}
          {% assign social_count = 0 %}
          {% if block.settings.instagram_url != blank %}
            {% assign social_count = social_count | plus: 1 %}
          {% endif %}
          {% if block.settings.tiktok_url != blank %}
            {% assign social_count = social_count | plus: 1 %}
          {% endif %}
          {% if block.settings.facebook_url != blank %}
            {% assign social_count = social_count | plus: 1 %}
          {% endif %}

          {% comment %} Appliquer la classe dynamique selon le nombre de réseaux {% endcomment %}
          <div class="footer-social-grid footer-social-grid--{{ social_count }}">
            <div class="social-grid-item footer-logo-item">
              {% if block.settings.logo != blank %}
                <img src="{{ block.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" class="footer-logo-image">
              {% else %}
                <div class="footer-logo-text">
                  <span class="logo-pogba">OFFSIDE</span>
                  <span class="logo-mdx">CONCEPT</span>
                </div>
              {% endif %}
            </div>

            {% if block.settings.instagram_url != blank %}
              <div class="social-grid-item footer-instagram-item">

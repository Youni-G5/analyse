{% comment %}
  Template: Activate Account
  Description: Activation du compte client apr√®s inscription
{% endcomment %}

{%- layout none -%}

<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ 'customer.activate_account.title' | t }} - {{ shop.name }}</title>
  
  {{ 'base.css' | asset_url | stylesheet_tag }}
  {{ content_for_header }}
</head>

<body>
  <div class="customer activate-account page-width">
    <div class="customer-container">
      <h1 class="customer-title">{{ 'customer.activate_account.title' | t }}</h1>
      <p class="customer-subtitle">{{ 'customer.activate_account.subtext' | t }}</p>

      {%- form 'activate_customer_password' -%}
        {%- if form.errors -%}
          <div class="form-message form-message--error" role="alert">
            <h2 class="form-message__title">
              <svg aria-hidden="true" focusable="false" width="13" height="13" viewBox="0 0 13 13">
                <circle cx="6.5" cy="6.5" r="5.65" stroke="#EB001B" stroke-width="1.3"/>
                <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="#EB001B"/>
              </svg>
              {{ 'templates.contact.form.error_heading' | t }}
            </h2>
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        <div class="field">
          <input
            type="password"
            name="customer[password]"
            id="ActivatePassword"
            autocomplete="new-password"
            {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="ActivatePassword-error"
            {% endif %}
            placeholder="{{ 'customer.activate_account.password' | t }}"
            required
            minlength="5"
          >
          <label for="ActivatePassword">
            {{ 'customer.activate_account.password' | t }}
          </label>
          {%- if form.errors contains 'password' -%}
            <small id="ActivatePassword-error" class="form-error">
              {{ form.errors.messages['password'] }}
            </small>
          {%- endif -%}
        </div>

        <div class="field">
          <input
            type="password"
            name="customer[password_confirmation]"
            id="ActivatePasswordConfirmation"
            autocomplete="new-password"
            {% if form.errors contains 'password_confirmation' %}
              aria-invalid="true"
            {% endif %}
            placeholder="{{ 'customer.activate_account.password_confirm' | t }}"
            required
            minlength="5"
          >
          <label for="ActivatePasswordConfirmation">
            {{ 'customer.activate_account.password_confirm' | t }}
          </label>
        </div>

        <button type="submit" class="button button--primary button--full-width">
          {{ 'customer.activate_account.submit' | t }}
        </button>

        <div class="activate-footer">
          <a href="{{ routes.account_login_url }}" class="link">
            {{ 'customer.activate_account.cancel' | t }}
          </a>
        </div>
      {%- endform -%}
    </div>
  </div>

  <style>
    .customer.activate-account {
      padding: 80px 20px;
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .customer-container {
      max-width: 500px;
      width: 100%;
      background: white;
      padding: 48px;
      border-radius: 8px;
      box-shadow: 0 4px 16px rgba(0,0,0,0.1);
    }

    .customer-title {
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 12px;
      text-align: center;
    }

    .customer-subtitle {
      text-align: center;
      margin-bottom: 32px;
      color: rgba(18, 18, 18, 0.7);
    }

    .field {
      position: relative;
      margin-bottom: 24px;
    }

    .field input {
      width: 100%;
      padding: 14px 16px;
      border: 1px solid rgba(0, 0, 0, 0.15);
      border-radius: 4px;
      font-size: 16px;
    }

    .field label {
      position: absolute;
      left: 16px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 16px;
      color: rgba(0, 0, 0, 0.55);
      pointer-events: none;
      transition: all 0.2s;
    }

    .field input:focus + label,
    .field input:not(:placeholder-shown) + label {
      top: -10px;
      font-size: 12px;
      background: white;
      padding: 0 4px;
    }

    .form-error {
      display: block;
      margin-top: 6px;
      font-size: 13px;
      color: #d82c0d;
    }

    .button {
      display: inline-block;
      padding: 14px 24px;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      font-weight: 600;
      text-align: center;
      cursor: pointer;
      transition: all 0.2s;
    }

    .button--primary {
      background: #121212;
      color: white;
    }

    .button--full-width {
      width: 100%;
      margin-top: 8px;
    }

    .activate-footer {
      margin-top: 24px;
      text-align: center;
    }

    .link {
      color: #121212;
      text-decoration: underline;
    }

    .form-message {
      padding: 16px;
      margin-bottom: 24px;
      border-radius: 4px;
    }

    .form-message--error {
      background: #fef3f2;
      color: #d82c0d;
      border: 1px solid #d82c0d;
    }

    .form-message__title {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 16px;
      margin-bottom: 8px;
    }
  </style>
</body>
</html>
